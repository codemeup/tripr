<%= render 'layouts/header' %>

<div class="container-fluid">
  <div class ="row">
    <div class ="col-xs-12 col-sm-6 col-md-8">
    <br>
      <h1>What's on your agenda? </h1>
    </div>
  </div>
    <div class ="row">
    <div class ="col-xs-12 col-sm-6 col-md-8" id="newTripForm">

      <%= form_for(@activity, url: trip_activities_path) do |f|%>

        <p>
          <%= f.label(:title) %>
          <%= f.text_field(:title, autofocus: true) %>
        </p>
        <p>
          <%= f.label(:summary)%>
          <%= f.text_field(:summary)%>
        </p>
        <p>
          <%= f.label(:link)%>
          <%= f.text_field(:link)%>
        </p>
        <p>
          <%= f.label(:category) %>
          <%= f.text_field(:category) %>
        </p>
        <p>
          <%= f.label(:address) %>
          <%= f.text_field(:address) %>
        </p>
        <p>
          <%= f.label(:zip_code) %>
          <%= f.text_field(:zip_code) %>
        </p>
        <p>
          <%= f.label(:duration) %>
          <%= f.number_field(:duration, step: 0.01) %>
        </p>
        <p>
          <%= f.label(:cost) %>
          <%= f.number_field(:cost, step: 0.01) %>
        </p>
         <%= f.hidden_field(:trip_id, value: @trip_id) %>
        <p>
          <%= f.submit("Add Activity", class: "btn-tripr-inverse") %>
        </p>

      <% end %>

    </div>
  </div>
</div>

